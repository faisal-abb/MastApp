<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MastApp.MainPage">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="EntryA" Placeholder="Enter number A" Keyboard="Numeric"/>
        <Entry x:Name="EntryB" Placeholder="Enter number B" Keyboard="Numeric"/>

        <Button Text="Add" Clicked="OnAddClicked"/>
        <Button Text="Subtract" Clicked="OnSubtractClicked"/>
        <Button Text="Multiply" Clicked="OnMultiplyClicked"/>
        <Button Text="Divide" Clicked="OnDivideClicked"/>
        <Button Text="Show Message" Clicked="onShowMessageClicked" />
        <Label x:Name="ResultLabel" Text="Result: " FontSize="18" TextColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>
